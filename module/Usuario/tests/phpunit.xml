<phpunit
    bootstrap="Bootstrap.php"
    colors="true"
    backupGlobals="false"
>
<!-- Mudar os nomes do MÃ³dulo -->
    <testsuites>
        <testsuite name="Usuario Test Suite">            
            <directory>./</directory>
        </testsuite>
    </testsuites>

    <listeners>
        <listener class="JohnKary\PHPUnit\Listener\SpeedTrapListener"/>
        <arguments>
            <array>
                <element key="slowThreshold"> <!-- Slowness threshold in ms -->
                    <integer>500</integer>
                </element>
                <element key="reportLength"> <!-- Number of slow tests to report on -->
                    <integer>10</integer>
                </element>
            </array>
        </arguments>
    </listeners>

